@page
@model PartFinderCore.Pages.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head runat="server">
    <title>Part Finder - Sign In</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body class="text-center">
    <form method="post" class="m-0 p-0">
        <section class="h-100 ">
            <div class="container h-100">
                <div class="row justify-content-sm-center h-100 pt-5">
                    <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9 pt-5">
                        <div class="card shadow-lg">
                            <div class="card-body p-5">
                                <img src="~/img/logoblack.svg" class="img-fluid mb-3" />
                                <h1 class="fs-4 card-title mb-4">Part Finder Sign In</h1>
                                <div class="text-danger">@Model.ReturnText</div>

                                <div class="mb-3">
                                    <label class="mb-2 text-muted" for="Username">Username</label>
                                    <input type="text" class="form-control" asp-for="@Model.Username" placeholder="Username" required />


                                </div>

                                <div class="mb-3">
                                    <div class="mb-2 w-100">
                                        <label class="text-muted" for="password">Password</label>
                                    </div>
                                    <input type="password" class="form-control" asp-for="@Model.Password" placeholder="Password" value="@Model.SavedPassword" required>
                                </div>

                                <div class="d-flex align-items-center">
                                    <div class="form-check ps-0 text-muted">
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        @Html.Label("Remember Me")
                                    </div>
                                    <button class="btn btn-primary ms-auto" type="submit">Sign in</button>
                                </div>
                            </div>
                        </div>
                      
                    </div>
                </div>
            </div>
        </section>
    </form>
</body>
</html>

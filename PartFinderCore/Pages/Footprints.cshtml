@page
@using PartFinderCore.Classes
@model PartFinderCore.Pages.FootprintsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "/Pages/Shared/_Layout.cshtml";

}

@section HeaderBreadCrumb {
    <li class="breadcrumb-item active" aria-current="page">Footprints</li>
}
@section header {
    <a id="addlink" href="/admin/footprints/add" class="btn btn-sm btn-primary"><i class="bi bi-plus-circle me-2"></i>Add new</a>
}
@section FooterScripts {
    <script src="/js/pagescripts.js"></script>
}
<div class="border rounded px-4 pt-2 bg-white">
    <table class="table border-bottom tablelinks">
        <thead>
            <tr>
                <th scope="col"><a class="datatable-sorter" asp-page="/Footprints" asp-route-sortorder="@Model.SortName">Name</a></th>
                <th scope="col"><a class="datatable-sorter" asp-page="/Footprints" asp-route-sortorder="@Model.SortCategory">Category</a></th>
                <th scope="col">&nbsp;</th>
                <th scope="col">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Data != null)
            {
                foreach (var item in Model.Data)
                {
                    <tr>
                        <td>@item.FootprintName</td>
                        <td>@item.FCName</td>
                        <td>@Html.Raw(Helpers.CheckImage(item.FootprintImage!))</td>
                        <td class="text-end">
                            <a href="/parts/listbyfootprint?id=@item.FootprintPkey" class="btn btn-sm btn-primary"><i class="bi bi-eye me-2"></i>View Parts</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    @Html.Raw(Model.Pagination)
</div>